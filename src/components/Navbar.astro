---
import HamburgerIcon from './HamburgerIcon.astro';

import NavbarMenu from './NavbarMenu.astro'

import Button from './Button.astro';
---

<nav id="navbar" class="flex justify-between items-center px-8 py-10 lg:px-52">
    <div class="flex justify-start items-center">
        <a href="" class="text-xl font-bold text-white">Llama Network</a>
    </div>
    <NavbarMenu />
    <div class="flex justify-end items-center">
        <button id="menuButton" class="lg:hidden">
            <HamburgerIcon />
            <HamburgerIcon />
        </button>
        <Button Class="font-bold">Try Now</Button>
    </div>
</nav>

<div id="hamburgerMenu" class="hidden absolute top-26 right-8 z-2 bg-white h-40 w-44 rounded-2xl p-5">
    <NavbarMenu />
</div>

<script>
    const hamburgerButton = document.getElementById('menuButton');

    const hamburgerMenu = document.getElementById('hamburgerMenu');

    hamburgerButton?.addEventListener('click', () => {
        hamburgerButton.classList.toggle('active');

        hamburgerMenu?.classList.toggle('flex');

        hamburgerMenu?.classList.toggle('hidden');
    });
</script>